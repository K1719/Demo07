<Page
    x:Class="CarCalculator.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CarCalculator"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Button x:Name="carsButton" Content="Cars" HorizontalAlignment="Left" Margin="210,10,0,0" VerticalAlignment="Top" Height="85" Width="140" FontSize="26.667" Click="carsButton_Click"/>
        <Button x:Name="trucksButton" Content="Trucks" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="85" Width="140" FontSize="26.667" Click="trucksButton_Click"/>
        <TextBlock x:Name="trucksTextBlock" HorizontalAlignment="Left" Margin="71,129,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" FontSize="26.667"/>
        <TextBlock x:Name="carsTextBlock" HorizontalAlignment="Left" Margin="273,129,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" FontSize="26.667"/>

    </Grid>
</Page>
